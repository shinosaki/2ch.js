{
  "name": "ch-viewer",
  "author": "Shinosaki",
  "description": "ウェブブラウザで動作する2ch互換ビューア",
  "license": "MIT",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:bun": "bun run --hot bun.js",
    "dev:worker": "wrangler dev worker.js",
    "dev:pages": "wrangler pages dev ./dist/",
    "build": "vite build",
    "build:bun": "bun build bun.js --compile --minify --outfile dist/run",
    "build:pages": "wrangler deploy --outdir=dist --dry-run pages.js && mv ./dist/pages.js ./dist/_worker.js && rm ./dist/pages.js.map ./dist/README.md",
    "preview": "vite preview",
    "deploy:bun": "NODE_ENV=production dist/run",
    "deploy:worker": "npx run build && wrangler deploy",
    "deploy:pages": "npx run build && npx run build:pages && wrangler pages deploy ./dist"
  },
  "dependencies": {
    "@tabler/icons-preact": "^2.45.0",
    "hono": "^3.12.4",
    "iconv-lite": "github:shinosaki/iconv-lite",
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@hono/vite-cloudflare-pages": "^0.1.2",
    "@hono/vite-dev-server": "^0.3.4",
    "@preact/preset-vite": "^2.7.0",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.11",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.8"
  }
}
